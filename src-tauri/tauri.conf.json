{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SC Market",
  "version": "1.0.0",
  "identifier": "space.sc-market.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SC Market",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "msi", "deb", "appimage", "dmg"],
    "icon": [
      "icons/icon-bg.png"
    ],
    "publisher": "SC Market",
    "copyright": "Copyright Â© 2026 SC Market",
    "category": "Utility",
    "shortDescription": "Star Citizen Marketplace",
    "longDescription": "Buy, sell, and trade Star Citizen items and services. Connect with players, manage contracts, and browse the marketplace."
  },
  "plugins": {
    "deepLink": {
      "mobile": [],
      "desktop": {
        "schemes": ["scmarket"]
      }
    }
  }
}
